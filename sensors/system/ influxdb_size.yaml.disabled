platform: influxdb
host: 127.0.0.1
port: 8086
username: homeassistant
password: !secret infldb_pass
queries:
  - name: InfluxDB
    unit_of_measurement: MB
    value_template: '{{ (value | float / 1024 /1024) | round(1) }}'
    group_function: mean
    measurement: '"monitor"."shard"'
    database: _internal
    where: 'time > now() - 1m AND "database"=''home_assistant'''
    field: diskBytes 